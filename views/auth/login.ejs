<div class="d-flex align-items-center justify-content-center min-vh-100" style="background: linear-gradient(135deg, #f5f7fa, #c3cfe2);">
  <div class="card shadow-lg rounded-4 border-0 p-4 animate__animated animate__fadeInDown" style="max-width: 420px; width:100%; background: #fff;">
    <h2 class="h2 fw-bold text-dark text-center mb-2">Welcome Back</h2>
    <p class="text-muted text-center mb-4">Login to continue using Note App</p>
    <% if (typeof toast !== 'undefined' && toast) { %>
      <div class="alert alert-<%= toast.type === 'error' ? 'danger' : toast.type %> alert-dismissible fade show shadow-sm rounded-3 animate__animated animate__fadeInDown" role="alert">
        ⚠️ <%= toast.message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <form method="post" action="/login">
      <div class="mb-3">
        <label class="form-label fw-semibold">Email</label>
        <input name="email" type="email" required class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Enter your email" />
      </div>
      <div class="mb-4">
        <label class="form-label fw-semibold">Password</label>
        <input name="password" type="password" required class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Enter your password" />
      </div>

      <button type="submit" class="btn btn-primary w-100 py-2 shadow-sm btn-lg hover-scale">
        Login
      </button>
    </form>
    <div class="d-flex align-items-center my-4">
      <hr class="flex-grow-1">
      <span class="mx-2 text-muted small">or continue with</span>
      <hr class="flex-grow-1">
    </div>
    <div class="d-grid gap-2">
      <a href="/auth/google" class="btn btn-outline-secondary d-flex align-items-center justify-content-center gap-2 rounded-3 shadow-sm">
        <img src="https://www.svgrepo.com/show/355037/google.svg" alt="Google" class="me-2" style="width: 20px; height: 20px;">
        Continue with Google
      </a>
      <a href="/auth/github" class="btn btn-outline-secondary d-flex align-items-center justify-content-center gap-2 rounded-3 shadow-sm">
        <img src="https://www.svgrepo.com/show/349375/github.svg" alt="GitHub" class="me-2" style="width: 20px; height: 20px;">
        Continue with GitHub
      </a>
    </div>
    <p class="text-muted text-center small mt-4">
      Don’t have an account?
      <a href="/register" class="fw-semibold text-decoration-none link-primary">Register</a>
    </p>

  </div>
</div>
