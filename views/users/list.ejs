<div class="container py-5" style="min-height: 80vh;">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-dark animate__animated animate__fadeInDown">Users</h2>
  </div>
  <div class="card shadow-lg rounded-4 border-0 animate__animated animate__fadeInUp p-3" style="background: linear-gradient(135deg, #f5f7fa, #c3cfe2);">
    <div class="table-responsive">
      <table class="table align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th scope="col" class="fw-semibold">User</th>
            <th scope="col" class="fw-semibold">Email</th>
            <th scope="col" class="fw-semibold">Registered</th>
          </tr>
        </thead>
        <tbody>
          <% if (users && users.length) { %>
          <% users.forEach(function(u){ %>
          <tr class="table-row-hover align-middle animate__animated animate__fadeIn">
            <td class="fw-medium text-dark d-flex align-items-center">
              <% if (u.profilePhoto) { %>
              <img src="<%= u.profilePhoto %>" alt="Avatar" class="rounded-circle me-3 user-avatar animate__animated animate__zoomIn">
              <% } else { %>
              <i class="bi bi-person-circle me-3 text-primary" style="font-size:1.6rem;"></i>
              <% } %>
              <%= u.fullName %>
            </td>
            <td class="text-muted"><%= u.email %></td>
            <td class="text-secondary small"><%= u.createdAt.toLocaleString() %></td>
          </tr>
          <% }) %>
          <% } else { %>
          <tr>
            <td colspan="4" class="text-center text-muted py-3">
              No users found.
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

</div>
