<header id="mainHeader" class="bg-gradient sticky-top shadow-sm">
  <nav class="navbar navbar-expand-md container py-3">
    <!-- Logo -->
    <a href="/" class="navbar-brand d-flex align-items-center fw-bold fs-3 me-4 hover-scale">
      <img src="/images/logo.png" alt="Logo" class="me-2 logo">
      NoteApp
    </a>

    <!-- Mobile menu -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Links -->
    <div class="collapse navbar-collapse" id="mainNavbar">
      <ul class="navbar-nav ms-auto align-items-center">
        <li class="nav-item"><a href="/notes" class="nav-link">Notes</a></li>

        <% if (user) { %>
        <li class="nav-item"><a href="/users" class="nav-link">Users</a></li>

        <!-- Dropdown -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
            <%= user.fullName %>
          </a>
          <ul class="dropdown-menu dropdown-menu-end animate__animated animate__fadeIn">
            <li>
              <a class="dropdown-item d-flex align-items-center gap-2" href="/notes/create">
                <i class="bi bi-plus-lg"></i> New Note
              </a>
            </li>
            <li>
              <a class="dropdown-item d-flex align-items-center gap-2" href="/notes?filter=favorites">
                <i class="bi bi-heart-fill text-danger"></i> Favorites
              </a>
            </li>
            <li>
              <a class="dropdown-item d-flex align-items-center gap-2" href="/notes?filter=pinned">
                <i class="bi bi-pin-angle-fill text-warning"></i> Pinned
              </a>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>
            <li>
              <a class="dropdown-item d-flex align-items-center gap-2 text-danger" href="/logout">
                <i class="bi bi-box-arrow-right"></i> Logout
              </a>
            </li>
          </ul>

        </li>
        <% } else { %>
        <li class="nav-item"><a href="/login" class="nav-link">Login</a></li>
        <li class="nav-item"><a href="/register" class="nav-link">Register</a></li>
        <% } %>
      </ul>
    </div>
  </nav>
</header>
