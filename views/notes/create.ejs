<div class="d-flex align-items-center justify-content-center min-vh-100" style="background: linear-gradient(135deg, #f5f7fa, #c3cfe2);">
  <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5 animate__animated animate__fadeInUp" style="max-width: 700px; width: 100%; background: #fff;">

    <!-- Header -->
    <h2 class="text-center fw-bold mb-3">Create Note</h2>
    <p class="text-center text-muted mb-4">Add a new note to your collection</p>

    <!-- Form -->
    <form method="post" action="/notes">
      <div class="mb-3">
        <label class="form-label fw-semibold">Title</label>
        <input type="text" name="title" required class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Enter note title">
      </div>
      <div class="mb-3">
        <label class="form-label fw-semibold">Content</label>
        <div id="editor" style="height: 300px;" class="rounded-3 shadow-sm border"></div>
        <textarea name="content" id="hiddenContent" style="display:none;"></textarea>
      </div>

      <!-- Buttons -->
      <div class="d-flex justify-content-between mt-4">
        <a href="/notes" class="btn btn-outline-secondary px-4 rounded-3 shadow-sm">Cancel</a>
        <button type="submit" class="btn btn-primary px-5 fw-semibold rounded-3 shadow-sm hover-scale">Save</button>
      </div>
    </form>

  </div>
</div>
