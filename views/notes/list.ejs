<div class="container py-5">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-5">
    <h2 class="fw-bold display-6 mb-3 mb-md-0">Your Notes</h2>
    <a href="/notes/create" class="btn btn-primary px-4 py-2 rounded-3 shadow-sm fw-semibold">
      <i class="bi bi-plus-lg me-1"></i> New Note
    </a>
  </div>

  <div class="row g-4">
    <% if (notes && notes.length) { %>
      <% notes.forEach(function(n){ %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm border-0 rounded-4 note-card animate__animated animate__fadeInUp"
               role="button"
               data-title="<%= n.title %>" 
               data-content="<%= n.content %>" 
               data-updated="<%= n.updatedAt.toLocaleString() %>">
            <div class="card-body d-flex flex-column">
              <h3 class="h5 fw-bold mb-2 text-truncate" title="<%= n.title %>"><%= n.title %></h3>
              <p class="text-muted mb-4 flex-grow-1" title="<%= n.contentText %>"><%= n.contentText.substring(0, 150) %>...</p>
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted"><i class="bi bi-clock me-1"></i><%= n.updatedAt.toLocaleString() %></small>

                <div class="d-flex flex-wrap gap-2">
                  <a href="/notes/<%= n._id %>/edit" class="btn btn-outline-secondary btn-sm rounded-3 shadow-sm d-flex align-items-center gap-1">
                    <i class="bi bi-pencil-square"></i>
                  </a>
                  <form method="post" action="/notes/<%= n._id %>?_method=DELETE" class="d-inline delete-note-form">
                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-3 shadow-sm d-flex align-items-center gap-1">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>

                  <!-- Pin -->
                  <form action="/notes/<%= n._id %>/toggle-pin" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-sm <%= n.isPinned ? 'btn-warning' : 'btn-outline-warning' %>" title="<%= n.isPinned ? 'Unpin' : 'Pin' %>">
                      <i class="bi bi-pin-angle"></i>
                    </button>
                  </form>

                  <!-- Favorite -->
                  <form action="/notes/<%= n._id %>/toggle-favorite" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-sm <%= n.isFavorite ? 'btn-danger' : 'btn-outline-danger' %>" title="<%= n.isFavorite ? 'Unfavorite' : 'Favorite' %>">
                      <i class="bi bi-heart"></i>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <div class="card shadow-sm border-0 rounded-4 text-center p-5 text-muted">
          No notes yet â€” <a href="/notes/create" class="text-primary fw-semibold text-decoration-none">create your first note</a>.
        </div>
      </div>
    <% } %>
  </div>
</div>


<!-- Note View Modal -->
<div class="modal fade" id="noteModal" tabindex="-1" data-bs-backdrop="false" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content rounded-4 shadow-lg">
      <div class="modal-header">
        <h5 id="modalTitle" class="modal-title fw-bold"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p id="modalContent" class="mb-4"></p>
        <div id="modalUpdated" class="text-muted small fst-italic"></div>
      </div>
    </div>
  </div>
</div>


<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" data-bs-backdrop="false" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4 shadow-lg">
      <div class="modal-header">
        <h5 class="modal-title fw-bold text-danger">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this note?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary rounded-3" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger rounded-3" id="confirmDeleteBtn">Delete</button>
      </div>
    </div>
  </div>
</div>
