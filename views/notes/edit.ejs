<div class="d-flex align-items-center justify-content-center min-vh-100" style="background: linear-gradient(135deg, #f5f7fa, #c3cfe2);">
  <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5 mx-auto animate__animated animate__fadeInUp" style="max-width: 850px; width: 100%; background: #fff;">

    <h2 class="fw-bold mb-4 text-center">Edit Note</h2>
    <form method="post" action="/notes/<%= note._id %>?_method=PUT">
      <div class="mb-3">
        <label class="form-label fw-semibold">Title</label>
        <input type="text" name="title" value="<%= note.title %>" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Enter note title">
      </div>
      <div class="mb-3">
        <label class="form-label fw-semibold">Content</label>
        <div id="editor" style="min-height: 250px;"><%- note.content %></div>
        <textarea id="hiddenContent" name="content" style="display:none;"></textarea>
      </div>
      <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="/notes" class="btn btn-outline-secondary px-4 rounded-3 shadow-sm">Cancel</a>
        <button type="submit" class="btn btn-primary px-5 fw-semibold rounded-3 shadow-sm hover-scale">
          Save
        </button>
      </div>
    </form>

  </div>
</div>
